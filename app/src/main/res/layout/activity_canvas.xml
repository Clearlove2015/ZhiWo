<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindows"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=""
        app:titleTextColor="@android:color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Canvas总结"
            android:textColor="@color/colorTitle"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>

    <com.zhaoqy.self.ui.activity.main.knowledge.canvas.CanvasView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:text="仿微信群头像九宫格控件"
        android:textColor="@color/colorNormal"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="2dp"
            android:background="#eeeeee"/>

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/ngiv1"
            android:background="#eeeeee"/>

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/ngiv2"
            android:background="#eeeeee"/>

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/ngiv1"
            android:layout_margin="2dp"
            android:background="#eeeeee"/>

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv5"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/ngiv2"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/ngiv4"
            android:background="#eeeeee"/>

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/ngiv3"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/ngiv5"
            android:background="#eeeeee"/>

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv7"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/ngiv4"
            android:layout_margin="2dp"
            android:background="#eeeeee"/>

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv8"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/ngiv5"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/ngiv7"
            android:background="#eeeeee"/>

        <com.lqr.ninegridimageview.LQRNineGridImageView
            android:id="@+id/ngiv9"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/ngiv6"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/ngiv8"
            android:background="#eeeeee"/>

    </RelativeLayout>

</LinearLayout>
