<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBar" >

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/guide_jump"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        app:layout_heightPercent="12%w"
        app:layout_marginRightPercent="3%w"
        app:layout_marginTopPercent="3%w"
        app:layout_paddingBottomPercent="3%w"
        app:layout_paddingLeftPercent="3%w"
        app:layout_paddingRightPercent="3%w"
        app:layout_paddingTopPercent="3%w"
        app:layout_widthPercent="18%w"
        android:background="@drawable/shape_circle_bg"
        android:text="跳过"
        android:textColor="#999999"
        app:layout_textSizePercent="@string/textsize_48px" />

</com.zhy.android.percent.support.PercentRelativeLayout>