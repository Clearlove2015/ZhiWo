<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindows"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=""
        app:titleTextColor="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="设置"
            android:textColor="@color/colorTitle"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/colorItemNormal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="开启引导页"
                    android:textColor="@color/colorNormal" />


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/open_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/switch_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:minWidth="50dp"
                    android:textOff="关"
                    android:textOn="开" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/colorItemNormal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="锁屏密码"
                    android:textColor="@color/colorNormal" />


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/lock_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/switch_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:minWidth="50dp"
                    android:checked="true"
                    android:textOff="关"
                    android:textOn="开" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@color/colorItemNormal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="开启悬浮球"
                    android:textColor="@color/colorNormal" />


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/floating_ball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/switch_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:minWidth="50dp"
                    android:textOff="关"
                    android:textOn="开" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_55"
                app:vc_hasletter="false"
                app:vc_title="支付密码"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_55"
                app:vc_hasletter="false"
                app:vc_title="意见反馈"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_55"
                app:vc_hasletter="false"
                app:vc_title="清除缓存"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_55"
                app:vc_hasletter="false"
                app:vc_title="关于"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
