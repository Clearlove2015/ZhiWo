<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/setphoto_cancel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="9%"
        app:layout_textSizePercent="5%w"
        android:background="@drawable/drawer_item_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="@drawable/selector_vericode_text" />

    <View
        android:id="@+id/setphoto_line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/setphoto_cancel"
        app:layout_heightPercent="1%" />

    <TextView
        android:id="@+id/setphoto_choose_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/setphoto_line1"
        app:layout_heightPercent="9%"
        app:layout_textSizePercent="5%w"
        android:background="@drawable/drawer_item_selector"
        android:gravity="center"
        android:text="从相册中选取"
        android:textColor="@drawable/selector_vericode_text" />

    <View
        android:id="@+id/setphoto_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/setphoto_choose_photo"
        android:background="@color/colorWindows" />

    <TextView
        android:id="@+id/setphoto_take_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/setphoto_line2"
        app:layout_heightPercent="9%"
        app:layout_textSizePercent="5%w"
        android:background="@drawable/drawer_item_selector"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@drawable/selector_vericode_text" />

    <View
        android:id="@+id/setphoto_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/setphoto_take_photo"
        android:background="@color/colorWindows" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/setphoto_line3"
        app:layout_heightPercent="8%"
        app:layout_textSizePercent="4.5%w"
        android:background="@drawable/drawer_item_selector"
        android:gravity="center"
        android:text="设置头像"
        android:textColor="@color/colorNormal" />

</com.zhy.android.percent.support.PercentRelativeLayout>