<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorWindows"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_head"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="zhaoqyingyue"
            android:textColor="@color/colorNormal"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="信息"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/resume"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="简历"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/education"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="教育"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/life"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="生活"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/develop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="开发"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/platform"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="平台"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="笔记"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/clouddisk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="云盘"/>

            <com.zhaoqy.self.ui.widget.VerticalCard
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vertical_card_height"
                app:vc_hasarrow="false"
                app:vc_hasline="false"
                app:vc_title="资讯"/>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mode_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/drawer_item_selector"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mode_title"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_circle_bg"
                android:gravity="center"
                android:textSize="@dimen/textSize_14"
                android:text="夜"
                android:textColor="@color/colorCircle" />

            <TextView
                android:id="@+id/mode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间"
                android:textSize="@dimen/textSize_14"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorNormal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/drawer_item_selector"
            android:orientation="horizontal">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_circle_bg"
                android:gravity="center"
                android:textSize="@dimen/textSize_14"
                android:text="设"
                android:textColor="@color/colorCircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="@dimen/textSize_14"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorNormal"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
