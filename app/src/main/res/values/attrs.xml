<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 垂直型卡片 -->
    <declare-styleable name="VerticalCard">
        <attr name="vc_bg_color" format="color"/>       <!-- 背景颜色值 -->
        <attr name="vc_title" format="string"/>         <!-- 标题 -->
        <attr name="vc_title_color" format="color"/>    <!-- 标题颜色值 -->
        <attr name="vc_content" format="string"/>       <!-- 内容 -->
        <attr name="vc_content_color" format="color"/>  <!-- 内容文本颜色值 -->
        <attr name="vc_hasarrow" format="boolean"/>     <!-- 是否有箭头 -->
        <attr name="vc_hasline" format="boolean"/>      <!-- 是否有间隔线 -->
        <attr name="vc_hasletter" format="boolean"/>    <!-- 是否有字母 -->
        <attr name="vc_hasunderline" format="boolean"/> <!-- 是否有下划线 -->
    </declare-styleable>

    <!-- RVPIndicator -->
    <declare-styleable name="RVPIndicator">
        <attr name="item_count" format="integer" />         <!-- Tab数量 -->
        <attr name="text_color_normal" format="color"/>     <!-- 文字常规颜色 -->
        <attr name="text_color_hightlight" format="color"/> <!-- 文字高亮颜色 -->
        <attr name="text_size" format="dimension"/>         <!-- 文字大小 -->
        <attr name="indicator_color" format="color"/>       <!-- 指示器颜色 -->
        <attr name="indicator_src" format="reference"/>     <!-- 指示器资源 -->
        <attr name="indicator_style" format="enum">         <!-- 指示器风格 -->
            <enum name="bitmap" value="0" />
            <enum name="line" value="1" />
            <enum name="square" value="2" />
            <enum name="triangle" value="3" />
        </attr>
    </declare-styleable>

</resources>
